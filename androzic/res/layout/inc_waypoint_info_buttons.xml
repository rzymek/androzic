<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageButton
        android:id="@+id/navigate_button"
        style="@style/Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/menu_navigate"
        android:src="@drawable/ic_action_directions" />

    <ImageButton
        android:id="@+id/edit_button"
        style="@style/Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/menu_edit"
        android:src="@drawable/ic_action_edit" />

    <ImageButton
        android:id="@+id/share_button"
        style="@style/Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/menu_share"
        android:src="@drawable/ic_action_share" />

    <ImageButton
        android:id="@+id/remove_button"
        style="@style/Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/menu_remove"
        android:src="@drawable/ic_action_trash" />

</merge>